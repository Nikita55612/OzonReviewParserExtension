{
  "manifest_version": 3,
  "name": "OzonReviewParser",
  "version": "1.0",
  "description": "OzonReviewParser расширение для Chrome",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
      "tabs",
      "scripting",
      "activeTab",
      "storage",
      "downloads"
  ],
  "host_permissions": [
      "http://*/*", 
      "https://*/*",
      "https://*.ozon.ru/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
      "service_worker": "background.js"
  },
  "content_scripts": [
      {
          "matches": ["https://*.ozon.ru/*"],
          "js": ["content.js"],
          "run_at": "document_end"
      }
  ],
  "web_accessible_resources": [
      {
          "resources": ["xlsx.full.min.js"],
          "matches": ["<all_urls>"]
      }
  ]
}